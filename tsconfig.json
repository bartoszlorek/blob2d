{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "blob2d": ["src/index.ts"]
    }
  },
  "include": ["src/**/*", "playground/**/*", "templates/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
